{
  "hosting": {
    "public": ".",
    "rewrites": [
      {
      "source": "**",
      "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source" : "**/*.@(jpg|jpeg|gif|png|ico)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=7200"
        }]
      },
      {
        "source" : "sw.js",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=0, no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "/",
        "headers": [
          {
            "key": "Link",
            "value": "</index.js>;rel=preload;as=script,<https://hnpwa.com/api/v0/news.json?page=1>;rel=preload;as=fetch;crossorigin"
          }
        ]
      }
    ]
  }
}